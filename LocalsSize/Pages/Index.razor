@page "/"
@using DataProject.Data;
@using SqliteWasmHelper;

@inject ISqliteWasmDbContextFactory<BridgeDbContext> BridgeDbContextFactory

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

